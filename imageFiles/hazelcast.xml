<?xml version="1.0" encoding="UTF-8"?>
<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.9.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <group>
        <name>bidms</name>
        <password>GROUP_PASSWORD</password>
    </group>
    <properties>
        <!-- enable for kubernetes discovery -->
        <property name="hazelcast.discovery.enabled">false</property>
    </properties>
    <network>
        <join>
            <multicast enabled="false"/>
            <!-- discovery configuration goes here -->
        </join>
        <symmetric-encryption enabled="true">
            <algorithm>Blowfish</algorithm>
            <salt>ENC_SALT</salt>
            <password>ENC_PW</password>
            <iteration-count>5</iteration-count>
        </symmetric-encryption>
    </network>
    <map name="default">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>1</backup-count>
        <async-backup-count>0</async-backup-count>
        <time-to-live-seconds>0</time-to-live-seconds>
        <!-- Tomcat's session timeout of 30 minutes. -->
        <max-idle-seconds>1800</max-idle-seconds>
        <!-- least recently used -->
        <eviction-policy>LRU</eviction-policy>
        <!-- this is on a per-map basis: we're using one map per webapp -->
        <max-size policy="USED_HEAP_PERCENTAGE">3</max-size>
        <merge-policy>com.hazelcast.map.merge.PutIfAbsentMapMergePolicy</merge-policy>
        <cache-deserialized-values>INDEX-ONLY</cache-deserialized-values>
    </map>

</hazelcast>
