            <!-- If using Kubernetes plugin -->
            <discovery-strategies>
                <discovery-strategy enabled="true"
                        class="com.hazelcast.kubernetes.HazelcastKubernetesDiscoveryStrategy">
                    <properties>
                      <!-- This has to be a "headless" Kubernetes service in
                           order for Kubernetes DNS to return all IP
                           addresses (A records) for the replica set.  -->
                      <property name="service-dns">tomcat-hazelcast.default.svc.cluster.local</property>
                      <property name="service-dns-timeout">10</property>
                  </properties>
                </discovery-strategy>
            </discovery-strategies>
