
  <!-- bidms-user-frontend -->
  <Service name="CatalinaBidmsUserFrontend">
    <Engine name="CatalinaBidmsUserFrontend"
            defaultHost="localhost-bidms-user-frontend">
      <Host name="localhost-bidms-user-frontend" appBase="/usr/local/tomcat/webapps/bidms-user-frontend"
            unpackWARs="true" autoDeploy="true">
        <Valve className="org.apache.catalina.valves.AccessLogValve"
               directory="logs"
               prefix="bidms-user-frontend_access_log" suffix=".txt"
               pattern="%h %l %u %t &quot;%r&quot; %s %b" />
      </Host>
    </Engine>

    <Connector port="8540"
               protocol="org.apache.coyote.http11.Http11NioProtocol"
               maxThreads="500" SSLEnabled="true">
      <SSLHostConfig>
        <Certificate certificateKeystoreFile="/etc/tomcat8/certs/tomcat.jks"
                     type="RSA" />
      </SSLHostConfig>
    </Connector>
  </Service>

